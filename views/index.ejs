<%- include('includes/header') %>

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script type="text/javascript" src="/JS/script.js"></script>
<style>
.danger {background-color: #f44336;} 
.success {background-color: #4CAF50;}
body, h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}
.w3-row-padding img {margin-bottom: 12px}
/* Set the width of the sidebar to 120px */
.w3-sidebar {width: 120px;background: #222;}
/* Add a left margin to the "page content" that matches the width of the sidebar (120px) */
#main {margin-left: 120px}
/* Remove margins from "page content" on small screens */
@media only screen and (max-width: 600px) {#main {margin-left: 0}}
</style>
<body class="w3-black">

  <!-- Icon Bar (Sidebar - hidden on small screens) -->
  <nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center">
    <!-- Avatar image in top left corner -->
    <a href="#" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
      <i class="fa fa-home w3-xxlarge"></i>
      <p>HOME</p>
    </a>
    <a href="#about" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
      <i class="fa fa-user w3-xxlarge"></i>
      <p>ABOUT</p>
    </a>
    <a href="#calendar" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
      <i class="fa fa-calendar w3-xxlarge"></i>
      <p>CALENDAR</p>
    </a>
    <a href="#contact" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
      <i class="fa fa-envelope w3-xxlarge"></i>
      <p>CONTACT</p>
    </a>
    <a href="/users/logout" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
      <i class="fa fa-sign-out w3-xxlarge"></i>
      <p>LOG OUT</p>
    </a>
  </nav>

  <!-- Navbar on small screens (Hidden on medium and large screens) -->
  <div class="w3-top w3-hide-large w3-hide-medium" id="myNavbar">
    <div class="w3-bar w3-black w3-opacity w3-hover-opacity-off w3-center w3-small">
      <a href="#" class="w3-bar-item w3-button" style="width:20% !important">HOME</a>
      <a href="#about" class="w3-bar-item w3-button" style="width:20% !important">ABOUT</a>
      <a href="#calendar" class="w3-bar-item w3-button" style="width:20% !important">CALENDAR</a>
      <a href="#contact" class="w3-bar-item w3-button" style="width:20% !important">CONTACT</a>
      <a href="/users/logout" class="w3-bar-item w3-button" style="width:20% !important">LOG OUT</a>
    </div>
  </div>

  <!-- Page Content -->
  <div class="w3-padding-large" id="main">
    <!-- Header/Home -->
    <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
      <h1 class="w3-jumbo"> Welcome 
        <%= userr.username %>
        
      </h1>
      <hr class="w3-opacity">
    </br>
    <div class="w3-content">
     <iframe width="450" id="linkYoutube" height="300" src="<%= userData.linkYoutube %>" alt="No video selected" frameborder="1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
   </div>
 </br>

 <div id="editVideoSuccess"></div>
 <button class="w3-button w3-light-grey w3-padding-large" onclick="editVideo()" >
  <i class="fa fa-edit"></i> EDIT VIDEO 
</button>



</header>

<!-- About Section -->
<div class="w3-content w3-justify w3-text-grey w3-padding-32" id="about">
  <h2 class="w3-text-light-grey">About me</h2>
  <hr style="width:200px" class="w3-opacity">
  <h3 class="w3-text-light-grey">Bio</h3>
  <p id="userBio"><%= userData.bio %>
  </p>
  <div id="editBioSuccess"></div>
  <button class="w3-button w3-light-grey w3-padding-large" onclick="editBio()" >
    <i class="fa fa-edit"></i> EDIT BIO
  </button>
  <br>


  <h3 class="w3-padding-16 w3-text-light-grey">My Price</h3>
  <div class="w3-row-padding" style="margin:0 -16px">
    <div class="w3-half w3-margin-bottom">
      <ul class="w3-ul w3-white w3-center w3-hover-opacity-off">
        <li class="w3-dark-grey w3-xlarge w3-padding-32">Min Price</li>
        <li class="w3-padding-16">
          <h2 id="minPricePerHour"><%= userData.minPricePerHour %></h2>
          <span class="w3-opacity">per hour</span>
        </li>
        <li class="w3-padding-16">
          <h2 id="minPricePerDay"><%= userData.minPricePerHour*24 %></h2>
          <span class="w3-opacity">per day</span>
        </li>
      </ul>
    </div>
    <div class="w3-half">
      <ul class="w3-ul w3-white w3-center w3-hover-opacity-off">
        <li class="w3-dark-grey w3-xlarge w3-padding-32">Max Price</li>
        <li class="w3-padding-16">
          <h2 id="maxPricePerHour"><%= userData.maxPricePerHour %></h2>
          <span class="w3-opacity">per hour</span>
        </li>
        <li class="w3-padding-16">
          <h2 id="maxPricePerDay"><%= userData.maxPricePerHour*24 %></h2>
          <span class="w3-opacity">per day</span>
        </li>
      </ul>
    </div>
  </div>
  <div id="editPriceSuccess"></div>
  <div class="w3-center">
    <button class="w3-button w3-light-grey w3-padding-large w3-section w3-center" onclick="editPrice()">

      <i class="fa fa-edit" ></i> Edit price
    </button>
  </div>
</br>


<h3 class="w3-padding-16 w3-text-light-grey">Venues</h3>
<div class="w3-row w3-center w3-full  w3-section w3-light-grey">
  <table class="w3-table-all w3-hoverable " id="venueTable">
    <thead>
      <tr class="w3-light-grey">
        <th>Name</th>
        <th>Type</th>
        <th>Location</th>
        <th>Delete</th>
      </tr>
    </thead><% if(venues.length==0){ %>
    <tr id='noVenues'><td>No data</td><td>No data</td><td>No data</td><td></td></tr>
    <% } %>
    <% for(var i=0;i<venues.length;i++){ %>
    <tr id='<%= venues[i].idVenue %>'>
      <td> <%= venues[i].nameVenue %> </td>
      <td> <%= venues[i].typeVenue %> </td>
      <td> <%= venues[i].locationVenue %> </td>
      <td><span id='<%= venues[i].idVenue %>' class="close" onClick='delVenue(this.id)'>&times;</span></td>
    </tr>
    <% } %>
    <tr>
      <td>Add new venue:</td>
      <td></td><td></td><td></td>
    </tr>
    <tr>
      <td><input type="text" class="form-control" id="addNameVenue"></td>
      <td><input type="text" class="form-control" id="addTypeVenue"></td>
      <td><input type="text" class="form-control" id="addLocationVenue"></td>
      <td></td>
    </tr>
  </table>
</div>
<div id="venueNotification"></div>
<div class="w3-center">
  <button class="w3-button w3-light-grey w3-padding-large" onclick="addVenue()" >
    <i class="fa fa-plus"></i> ADD VENUE
  </button>
</div>
</br>
</br>



<div class="w3-full">
  <ul class="w3-ul w3-white w3-center w3-hover-opacity-off" id='selectedGenres'>
    <li class="w3-dark-grey w3-xlarge w3-padding-32">Genres</li>
    <% if(genres.length==0){ %>
    <li id="noDataGenres">No data</li>
    <% } %>
    <% for(var i=0;i<genres.length;i++){ %> 
    <li id='<%= genres[i].idGenre %>'><%= genres[i].nameGenre %><span id='<%= genres[i].idGenre %>' class="close" onClick='delGenre(this.id)'>&times;</span></li>
    <% } %>
    <li style="text-align: left;">Select new genre:</li>
    <li> <select class="form-control w3-center" id="allGenre">
      <% for(var j=0;j<genresAll.length;j++){ %> 
      <option id='<%= genresAll[j].idGenre %>'><%= genresAll[j].nameGenre %></option>
      <% } %>
    </select> </li>
    <li class="w3-padding-16">
      <div>
        <div id="addNewGenre"></div>
        <button class="w3-button w3-grey w3-padding-large" onclick='addGenre()' >
          <i class="fa fa-plus"></i> ADD GENRE 
        </button></div>
        <br>
        <div> <button class="w3-button w3-grey w3-padding-large" onclick="addNewGenreDb()">
          <i class="fa fa-plus"></i> ADD NEW GENRE  <i class="fa fa-plus"></i>
        </button> </div>
      </li>
      
    </ul>
  </div>

  <!-- Testimonials -->
  <h3 class="w3-padding-24 w3-text-light-grey">Testimonials</h3> 
  <div id='testimonialNotification'></div>
  <% if(testimonials.length==0){ %>
  <p id='noTestimonials'>No data</p><br>
  <% } %>
  <div id='userTestimonials'>
    <% for(var i=0;i<testimonials.length;i++){ %>
    <p><span class="w3-xlarge w3-margin-right"><%= testimonials[i].nameTestimonial %></span></p>
    <p><%= testimonials[i].contentTestimonial %></p><br>
    <%  }%>
  </div>
  <button class="w3-button w3-light-grey w3-padding-large" onclick="addTestimonial()" >
    <i class="fa fa-plus"></i> ADD NEW TESTIMONIAL
  </button>
  <!-- End About Section -->
</div>

<!-- Calendar Section -->
<div class="w3-padding-32 w3-content" id="calendar">
  <h2 class="w3-text-light-grey">Calendar</h2>
  <hr style="width:200px" class="w3-opacity">
  <div class="w3-half w3-margin-bottom">
    <label >Select Date</label>

    <input type="date" class="form-control" name="date" id="datePicker" onchange="addDate()" required ><br>
    <div id="booking"></div>
  </div>

  <div class="w3-half w3-margin-bottom w3-center">
   
    <br>
    <div id='dateButton'></div>
    <div id='dateButtonNotification'></div>
  </div>
  
  <!-- End Calendar Section -->
</div>
<br>
<br>
<!-- Contact Section -->
<div class="w3-padding-64 w3-content w3-text-grey" id="contact">
  <br>
  <h2 class="w3-text-light-grey">Contact Detalis</h2>
  <hr style="width:200px" class="w3-opacity">

  <div class="w3-section">
   <p><i class="fa fa-address-book fa-fw w3-text-white w3-xxlarge w3-margin-right"> </i> <%= userr.firstName %> <%= userr.lastName %>
   </p>
   <p><i class="fa fa-map-marker fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> <%= userData.address %> , <%= userData.city %> , <%= userData.postcode %>, <%= userData.country %></p>
   
   <p><i class="fa fa fa-venus-mars fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> <%= userData.gender %></p>
   <p><i class="fa fa-phone fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> <%= userData.numberPhone %></p>
   <p><i class="fa fa-envelope fa-fw w3-text-white w3-xxlarge w3-margin-right"> </i> Email: <%= userr.eMail %>
   </p>
   
   <!-- Footer -->
   <footer class="w3-content w3-padding-64 w3-text-grey w3-xlarge">
    
    <p class="w3-medium">Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank" class="w3-hover-text-green">w3.css </a>& Alen Semanić</p>
    <!-- End footer -->
  </footer>

  <!-- END PAGE CONTENT -->
</div>

<%- include('includes/footer') %>